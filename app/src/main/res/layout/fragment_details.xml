<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/status_text_padding"
        tools:text="Status message"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/status_text_size"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/pb_progress"
        android:layout_width="@dimen/progressbar_size"
        android:layout_height="@dimen/progressbar_size"
        android:layout_gravity="center" />

    <RelativeLayout
        android:id="@+id/ll_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_movie_backdrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/backdrop_height"
            android:background="@color/colorPrimaryDark"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/backdrop_height"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:shadowColor="#000"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="10"
            android:textColor="@android:color/white"
            android:textSize="@dimen/heading_text_size"
            tools:text="Movie title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_title">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/tv_movie_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    tools:text="Movie ID" />

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/iv_movie_poster"
                    android:layout_width="@dimen/poster_width"
                    android:layout_height="@dimen/poster_height" />

                <TextView
                    android:id="@+id/tv_movie_original_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_movie_poster"
                    android:textSize="@dimen/title_text_size"
                    tools:text="Original Title" />

                <TextView
                    android:id="@+id/tv_movie_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_movie_original_title"
                    android:layout_toRightOf="@id/iv_movie_poster"
                    tools:text="12 may 2010" />

                <TextView
                    android:id="@+id/tv_movie_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_movie_year"
                    android:layout_toRightOf="@id/iv_movie_poster"
                    tools:text="100 min" />

                <TextView
                    android:id="@+id/tv_movie_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_movie_poster"
                    android:padding="5dp"
                    android:textSize="@dimen/overview_text_size"
                    tools:text="Overview goes here.." />

                <RatingBar
                    android:id="@+id/rb_movie_rating"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_movie_duration"
                    android:layout_toRightOf="@+id/iv_movie_poster"
                    android:numStars="5"
                    android:rating="0.0"
                    android:stepSize="0.1" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>
