<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pb_progress"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center" />

    <RelativeLayout
        android:id="@+id/ll_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_movie_backdrop"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorPrimaryDark"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:shadowColor="#000"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="10"
            android:text="MOVIE TITLE"
            android:textColor="@android:color/white"
            android:textSize="36sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_title">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/tv_movie_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="DETAILS"
                    android:textSize="30sp"
                    android:visibility="gone" />

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/iv_movie_poster"
                    android:layout_width="120dp"
                    android:layout_height="160dp" />

                <TextView
                    android:id="@+id/tv_movie_original_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_movie_poster"
                    android:text="Original title"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_movie_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_movie_original_title"
                    android:layout_toRightOf="@id/iv_movie_poster"
                    android:text="2016" />

                <TextView
                    android:id="@+id/tv_movie_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_movie_year"
                    android:layout_toRightOf="@id/iv_movie_poster"
                    android:text="120 min" />

                <TextView
                    android:id="@+id/tv_movie_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_movie_poster"
                    android:padding="5dp"
                    android:text="test test test test test test test test test test test test test test test test " />

                <RatingBar
                    android:id="@+id/rb_movie_rating"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_movie_duration"
                    android:layout_toRightOf="@+id/iv_movie_poster"
                    android:numStars="5"
                    android:rating="0.0"
                    android:stepSize="0.1" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>
